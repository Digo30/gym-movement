<div class="minha-conta">
  <div class="conta-container w-100">
    <div class="info-usuario">
      <% if current_user.profile_picture %>
        <%= image_tag current_user.profile_picture, alt: "Imagem de Perfil", width: 150, height: 150 %>
      <% end %>
      <h2 class="fw-bold"><span class="text-light"><%= current_user.first_name %> <%= current_user.last_name %></span></h2>
      <p class="text-success">Idade: <span class="text-light"><%= current_user.age ? "#{current_user.age} anos" : "Data de nascimento nÃ£o informada" %></span></p>
    </div>

    <div class="opcoes-conta">
      <a href="<%= user_edit_path %>" class="btn btn-success rounded-custom w-100 text-light">Editar Perfil</a>
      <a href="<%= profiles_path %>" class="btn btn-success rounded-custom w-100 text-light">Meu Desempenho</a>
      <a href="<%= chat_path %>" class="btn btn-success rounded-custom w-100 text-light">Monte seu Treino</a>
      <%= link_to "Sair", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn bg-danger text-light rounded-custom w-100" %>
    </div>
  </div>
</div>
