<%= form_with(model: @water_intake, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :amount, "Quantidade de água (em litros):" %>
    <%= form.number_field :amount, class: "form-control", step: "0.01" %>
  </div>

  <div class="form-group">
    <%= form.label :date, "Data:" %>
    <%= form.date_field :date, class: "form-control", value: Date.today %>
  </div>

  <div class="form-group">
    <%= form.submit "Adicionar Água", class: "btn btn-primary" %>
  </div>
<% end %>
